generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_DOCKER")
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  username String    @unique
  password String
  is_admin Boolean   @default(false)
  name     String
  coins    Int       @default(0)
  comments Comment[]
  ratings  Rating[]
  videos   Video[]
}

model Album {
  id          Int        @id @default(autoincrement())
  title       String
  description String
  thumbnail   String
  videos      Video[]
  ratings     Rating[]
  categories  Category[]
}

model Video {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  url         String
  thumbnail   String
  views       Int       @default(0)
  is_premium  Boolean   @default(false)
  album_id    Int
  comments    Comment[]
  users       User[]

  album Album @relation(fields: [album_id], references: [id])
}

model Rating {
  id       Int @id @default(autoincrement())
  score    Int
  user_id  Int
  album_id Int

  user  User  @relation(fields: [user_id], references: [id])
  album Album @relation(fields: [album_id], references: [id])
}

model Category {
  id     Int     @id @default(autoincrement())
  name   String
  albums Album[]
}

model Comment {
  id       Int    @id @default(autoincrement())
  text     String
  user_id  Int
  video_id Int

  user  User  @relation(fields: [user_id], references: [id])
  video Video @relation(fields: [video_id], references: [id])
}
